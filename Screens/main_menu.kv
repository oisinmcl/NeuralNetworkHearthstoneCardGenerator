#:kivy 1.10.0

RootWidget:
    # import container
    container: container

    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 6

        # bottom-left part:
        BoxLayout:
            orientation: 'horizontal'
            padding: 0
            spacing: 6

            # bottom-left
            BoxLayout:
                size_hint: 0.12, 0.12
                orientation: 'vertical'
                padding: 0
                spacing: 6

                
				# button
				Button:
					text: 'Main Menu'

            # create container (bottom-right)
            BoxLayout:
                id: container