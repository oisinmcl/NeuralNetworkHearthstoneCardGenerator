	name: 'Card_Manager'
	RelativeLayout:
		title: 'Training Setup'
		canvas:
			Color:
				rgb: 1, 1, 1
			Rectangle:
				source: 'Resources/background.jpg'
				size: self.size
		
		
		BoxLayout:	
			size: self.parent.size  
			pos: self.parent.pos  
			orientation: 'vertical'
