<Card_Manager>:
	name: 'Card_Manager'
	RelativeLayout:
		title: 'Training Setup'
		canvas:
			Color:
				rgb: 1, 1, 1
			Rectangle:
				source: 'Resources/background.jpg'
				size: self.size
		
		
		BoxLayout:	
			size: self.parent.size  
			pos: self.parent.pos  
			orientation: 'vertical'
			padding: 10
			
			BoxLayout:
				size: self.parent.size  
				pos: self.parent.pos  
				orientation: 'horizontal'
				padding: 10
				spacing: 20
				
				BoxLayout:
					##left side box layout
					size: self.parent.size  
					pos: self.parent.pos  
					orientation: 'vertical'
					padding: 10
					size_hint_x: .7
					
					canvas.before:
						Color:
							rgba: 0.4, 0.37, 0.32, 0.8  # grey
						Rectangle:
							pos: self.pos
							size: self.size
					GridLayout:
						cols: 2
						padding: 10 
						
						HSLabel:
							text: 'Card File:'
							size_hint_x: .5	
							pos: self.parent.pos
							
						HSDirInput: 	
							text:  str(root.cardFile)
							on_text: root.changeCardFile(self.text)
							##size: self.parent.size  
							pos: self.parent.pos
							on_release: root.showChangeCardChooser()		
						
						HSLabel:
							text: 'Number of Cards: '
							size: self.parent.size  
							pos: self.parent.pos
							readonly: True								
							
						HSNumericInput: 	
							id: txt_numOfCards
							text:  root.numOfCards
							hint_text: 'Number of Cards'	
							input_type: 'number'
							size: self.parent.size  
							pos: self.parent.pos
							size_hint_x: .5	
							readonly: True
							
						HSLabel:
							text: 'Card Art File: '
							size_hint_x: .5	
							pos: self.parent.pos
							
						HSDirInput: 	
							text:  str(root.cardArtSource)
							##on_text: root.changeCardArt(self.text)
							##size: self.parent.size  
							pos: self.parent.pos
							on_release: root.showChangeCardArtChooser()		
							
						HSLabel:
						HSLabel:
						HSLabel:
						HSLabel:
						HSLabel:
						HSLabel:
						HSLabel:
						HSLabel:						
					
					HSButton:
						text: 'Download Cards From Database'
						size_hint_y: .2
						on_press: root.btnGetCardsFromDB(self)
				
				BoxLayout:
					##right side box layout
					size: self.parent.size  
					pos: self.parent.pos  
					orientation: 'horizontal'
					padding: 10
					spacing: 10
					
					canvas.before:
						Color:
							rgba: 0.4, 0.37, 0.32, 0.8  # grey
						Rectangle:
							pos: self.pos
							size: self.size			
							
					RelativeLayout:
						id: 'cardCanvas'
						pos: self.pos
						size: self.size	
						

							
						StencilView:
							id: StencilView
							pos: self.pos
							size: self.size
							size_hint: 0.7, 0.6
							pos: 53, 140							

							ScatterLayout:
								auto_bring_to_front: False
								pos: art.pos
								size: art.size	
								
								Image:
									id: art
									source: root.cardArtSource
									pos: StencilView.pos
									size: StencilView.size
									keep_ratio: True	

						
						Image:
							id: frame
							source: root.frameSource
							size_hint: 1, 1
							keep_ratio: True
							
						Image:
							id: rarity
							source: root.raritySource
							size_hint: 0.23, 0.23
							pos: 147, 115
							keep_ratio: True
							
						Image:
							id: mana
							source: root.manaSource
							size_hint: 0.20, 0.20
							pos: 38, 333
							keep_ratio: True	

						Image:
							id: Racebanner
							source: root.raceBannerSource
							size_hint: 0.62, 0.62
							pos: 78, -105
							keep_ratio: True								
							
						Image:
							id: health
							source: root.healthSource
							size_hint: 0.22, 0.22
							pos: 275, -12
							keep_ratio: True

						Image:
							id: attack
							source: root.attackSource
							size_hint: 0.23, 0.23
							pos: 20, -10
							keep_ratio: True

						Image:
							id: banner
							source: root.bannerSource
							size_hint: 0.69, 0.69
							pos: 62, 45
							keep_ratio: True
							
						Image:
							id: dragon
							source: root.legendaryDragonSource
							size_hint: 0.60, 0.60
							pos: 112, 225
							keep_ratio: True
							
						##card text value
						HSCardText: 
							text: root.cardTextSource
							pos: 90, 30
							size_hint: 0.55, 0.28
							text_size: self.size
							
						##race value
						HSStatsText: 
							text: root.raceValueSource
							pos: 142, 15
							size_hint: 0.3, 0.05
							color: 1.0,1.0,1.0,1.0
							text_size: self.size
							font_size: 16
									
						##mana value
						HSStatsText:
							text: root.manaValueSource
							pos: -115, 173
							
						##attack value	
						HSStatsText:
							text: root.attackValueSource
							pos: -120, -175
							font_size: 75
							
						##health value
						HSStatsText:
							text: root.healthValueSource
							pos: 126, -175
							font_size: 75	
							
						##name value
						HSStatsText:
							text: root.nameSource
							pos: 67, 173
							size_hint: 0.65, 0.1
							color: 1.0,1.0,1.0,1.0
							text_size: self.size
							font_size: 20

					BoxLayout:
						size: self.parent.size  
						pos: self.parent.pos  
						orientation: 'vertical'
						padding: 10
						size_hint_x: .4
						
						canvas.before:
							Color:
								rgba: 0.4, 0.37, 0.32, 0.8  # grey
							Rectangle:
								pos: self.pos
								size: self.size	
								
								
						HSButton:
							size: self.parent.size  
							pos: self.parent.pos  
							on_press: root.btnDecCardNum(self)
							text: 'Previous'
							
						HSButton:
							size: self.parent.size  
							pos: self.parent.pos  
							on_press: root.btnIncCardNum(self)
							text: 'Next'
							
						HSButton:
							size: self.parent.size  
							pos: self.parent.pos  
							on_press: root.btnRefresh(self)
							text: 'Refresh'	
							
						HSLabel:
						HSLabel:
						HSLabel:
						HSLabel:
						
			HSButton:
				##pos: self.parent.pos  
				size_hint_y: .2
				size_hint_x: .3
				pos_hint_x: .4
				text: 'Main Menu'
				on_press: root.manager.current = 'MainMenu'

